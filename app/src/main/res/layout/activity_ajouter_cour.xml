<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterCourActivity">

    <EditText
        android:id="@+id/addfile"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/ic_attach_file"
        android:drawablePadding="25dp"
        android:drawableTint="#B8B8B8"
        android:hint="File"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/colorP3"
        android:textColorHighlight="@color/colorP3"
        android:textColorHint="@color/colorP3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="377dp" />

    <EditText
        android:id="@+id/addteacher"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="25dp"
        android:drawableTint="#B8B8B8"
        android:hint="Id Teacher"
        android:drawableLeft="@drawable/username_icon"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@color/colorP3"
        android:textColorHighlight="@color/colorP3"
        android:textColorHint="@color/colorP3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="284dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/addDescription"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="25dp"
        android:drawableTint="#B8B8B8"
        android:hint="Ajouter Description"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/title"
        android:padding="12dp"
        android:textColor="@color/colorP3"
        android:textColorHighlight="@color/colorP3"
        android:textColorHint="@color/colorP3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="190dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/addtitre"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="25dp"
        android:drawableTint="#B8B8B8"
        android:hint="Ajouter Titre"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/title"
        android:padding="12dp"
        android:textColor="@color/colorP3"
        android:textColorHighlight="@color/colorP3"
        android:textColorHint="@color/colorP3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="94dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ajouter"
        android:layout_width="137dp"
        android:layout_height="63dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_white"
        android:text="Ajouter"
        android:textColor="@color/colorP3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="137dp"
        android:layout_height="63dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_white"
        android:text="Cancel"
        android:textColor="@color/colorP3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="201dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cut_background" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/addfile"
        app:layout_constraintEnd_toEndOf="@+id/addfile"
        app:layout_constraintTop_toTopOf="@+id/addfile"
        app:srcCompat="@drawable/ic_add_dev" />
</androidx.constraintlayout.widget.ConstraintLayout>